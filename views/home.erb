<div class="row center"> 
	<!-- The Data Hash card container -->
  <div class="col s5 m6">
    <div class="card blue-grey">
      <div class="card-content white-text">
        <span class="card-title">Data Hash</span>
        <p>
        	<% if @fullhash == {} %>
						Add Some Data To the Hash
					<% else %>
						<%= @fullhash %>
					<% end %>
				</p>
      </div>
      <div class="card-action">
        <form action="/add_to_hash" method="POST">
					<input type="text" class="new-key" name="hashkey" placeholder="Key">
					<input type="text" class="new-value" name="hashvalue" placeholder="Value">
					<input type="hidden" class="new-value" value='<%= @fullhash %>' name="fullhash">
					<button type="submit" class="btn btn-primary">Add Data to Hash</button>
				</form>
      </div>
    </div>
  </div>

  <!-- The Results card container -->
  <div class="col s5 m6">
    <div class="card blue-grey">
      <div class="card-content white-text">
        <span class="card-title">The Results</span>
        <p>
	      	<% if @result != nil %>
						
						<%= @result %>
		
					<% end %>
				</p>
      </div>
      <div class="card-action">
      	<p></p>
      </div>
    </div>
  </div>
</div>


<div class="row center">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Basic Rules</a></li>
      <li class="tab col s3"><a href="#test2">Complex Rules</a></li>
      <li class="tab col s3"><a href="#test3">Test Multiple Rules</a></li>
    </ul>
  </div>
  <div id="test1" class="col s12">
  	<h1>Basic Rules</h1>
  	<% if @key_array %>
			<div class="row">
				<div class="col s0 m4"></div>
			  <div class="col s12 m6">
			    <div class="card blue-grey darken-1">
			      <div class="card-content white-text">
			        <span class="card-title">Basic Rules</span>
			      </div>
			      <div class="card-action">
			        <form action="/run_rool" method="POST" id="rool-config">
								<input type="text" class="operand" name="operand" placeholder="Operand">
								<input type="hidden" class="new-value" value='<%= @fullhash %>' name="fullhash">
								<hr>
						  	<select class="browser-default" form="rool-config" name="rool">
						    	<option value="" disabled selected>Choose a Rule</option>
						    	<% @rool_array.each do |rool| %>
							  		<option value="<%= rool %>"><%= rool.capitalize %></option>
							  	<% end %>
						  	</select>
						  	<br>
						  	<select class="browser-default" name="hash_key" form="rool-config">
						  		<option value="" disabled selected>Choose a Key</option>
									<% @key_array.each do |key| %>
						  			<option value="<%= key %>"><%= key %></option>
						  		<% end %>
								</select>
								<br>
								<button type="submit" class="btn btn-primary">Test A Rule</button>
							</form>
			      </div>
			    </div>
			  </div>
			</div>
		<% end %>
	</div>
  <div id="test2" class="col s12">
  	<h1>Complex Rules</h1>
  	<p>Coming Soon...</p>
	</div>
  <div id="test3" class="col s12">
	  <h1>Test Multiple Rules</h1>
	  <p>Coming Soon...</p>
	</div>
</div>

